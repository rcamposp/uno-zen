{{!< default}}

{{#post}}

  <article class="{{post_class}}">
    <header>
      <div class="post meta">
        <time datetime="{{date format="YYYY-MM-DDTHH:MM"}}">{{date format="DD MMM YYYY"}}</time>
        <span class="post tags">{{tags prefix="in " separator=" "}}</span>

        {{!> post-author}}

        <span class="post reading-time"> ~ <span></span> read.</span>
      </div>
      <a alt="Tweet '{{title}}'" href="https://twitter.com/intent/tweet?text={{encode title}}{{encode ' Â»'}}&amp;hashtags={{tags separator="," autolink="false"}}&amp;url={{url absolute="true"}}">
        {{#if image}}<img id="post-image" src={{image}} alt="{{{title}}}">{{/if}}
        <h1 class="icon-reverse icon-social-twitter-post" id="post-title">{{{title}}}</h1>
      </a>
    </header>

    <div id="post-content" class="{{post_class}}">
      {{content}}
    </div>
<h3 class="you">You Might Enjoy</h3>
    <div class="post related">
      {{#prev_post}}
        <a style="background-image:url('{{image}}')"  rel="prev" id="prev-btn" class="btn small square" href="{{url}}"><span>{{title}}</span></a>
      {{/prev_post}}

      {{#next_post}}
        <a style="background-image:url('{{image}}')" rel="next" id="next-btn" class="btn small square" href="{{url}}"><span>{{title}}</span></a>
      {{/next_post}}
    </div>

    {{> comments}}

  </article>

{{/post}}
